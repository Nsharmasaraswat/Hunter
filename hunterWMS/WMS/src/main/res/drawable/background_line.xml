<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="0.5dp" android:color="@color/GTPNavy" />
            <solid android:color="@android:color/transparent" />

        </shape>
    </item>

    <!-- This is for border top but
    you can change this according to your need -->
    <item android:top="6dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>